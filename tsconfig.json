{
    "compilerOptions": {
        "target": "es2015",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": ["esnext", "dom"],
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"]
        },
        "skipLibCheck": true,
        "types": [
            "vite/client",
            "./node_modules/element-plus/global",
            "./node_modules/wisdom-plus/global",
            "./node_modules/wisdom-plus/global-var",
            "unplugin-auto-import-element-plus-preset/type"
        ],
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/**/**/*.vue",
        "src/**/**/*.ts",
        "src/**/**/*.d.ts",
        "src/**/**/*.tsx",
        "auto-imports.d.ts",
        "components.d.ts"
    ]
}
